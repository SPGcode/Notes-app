<div class="row">
        {{#each notes}}
        <div class="col-md-3 my-4">
            <div class="card bg-yellow">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="./notes/edit/{{_id}}"><i class="far fa-edit"></i></a>
                    </h4>
                           <p>{{description}}</p>
                </div>
                <div class="container-fluid bg-beauty">
                        <button class="btn btn-success btn-block btn-sm my-2">Done</button>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-block btn-sm my-2" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        {{else}}
        <div class="card mx-auto bg-yellow">
            <div class="card-body">
                <h1>Wellcome {{ user.name }}</h1><br>
                <h3>You can add any task just now</h3>
                <p class="lead">ThereÂ´re not notes</p>
                <a href="/notes/add" class="btn btn-success btn-block">Get a new note</a>
            </div>
        </div>
        {{/each}}
</div>



